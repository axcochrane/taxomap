<h1>Concepts Index Page</h1>
<table>
  <thead> 
      <th>UUID</th>
      <th>Created</th>
      <th>Updated</th>
      <th>Title</th>
      <th>Parent</th>
      <th>Properties</th>
    </tr>
  </thead>
  <% @concepts.each do |c| %>
    <tr>
      <td><%= link_to c.uuid, edit_concept_path(c) %></td>
      <td><%= c.created_at %></td>
      <td><%= c.updated_at %></td>
      <td><%= c.title %></td>
      <td><%= c.parent&.title %></td>
      <td><%= c.properties.pluck(:title) %></td>
      <%# <td><%= c.has_children&.pluck(:title) %1></td> %>
      <%# <td><%= c.properties.pluck(:title) %1></td> %>
    </tr>
  <% end %>
  </table>
